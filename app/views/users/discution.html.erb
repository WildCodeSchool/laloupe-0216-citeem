<div id="discution">

	<h1>En discussion avec: <%= @user.nickname %></h1>

	<% @messages.each do |message| %>
		<div class="<%= message.user.id != @user.id ? 'gauche' : 'droite' %>">
			<div class="surnom">
				<%= User.find(message.author_id).nickname %> dit:
			</div>
			
			<div class="contenu">
				<%= message.content %>
			</div>
			<div class="date_message">
				<p>
					Message envoyé le <%= User.find(message.author_id).updated_at.strftime('%d/%m/%y à %H:%M') %>
				</p>
			</div>
		</div>
	<% end %>

	
	
</div>